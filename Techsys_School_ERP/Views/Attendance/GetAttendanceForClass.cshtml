<body>
	<div class="page-container" style="height:100%;">
		<div class="content">
			<!-- Basic initialization -->

			<div class="panel panel-primary panel-bordered" style="min-height:150px;">
				<div class="panel-heading bg-blue-800">
					<h6 class="panel-title ">FEE CONFIGURATION</h6>
					<div class="heading-elements">
						<ul class="icons-list">
							<li><a data-action="collapse"></a></li>
							<li><a data-action="reload"></a></li>
							<li><a data-action="close"></a></li>
						</ul>
					</div>
				</div>
				<div class="panel-body">

				</div>
				<div class="row col-xs-12">
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<div class="text-right col-xs-2">
						<label class="margin-top lbl-bold">CLASS</label>
					</div>

					<div class="col-xs-3">

						<select id="classList" required name="ClassName" class="form-control">
							@if (ViewBag.classList != null)
							{
								<option value='0'>-- Select Class --</option>
								foreach (var item in ViewBag.classList)
								{
									if (item.Text != null)
									{

										<option value="@item.Value">
											@item.Text
										</option>

									}

								}
							}
						</select>
					</div>
					<div class="text-right col-xs-2 col-xs-offset-1">
						<label class="margin-top lbl-bold">SECTION</label>
					</div>

					<div class="col-xs-3">

						<select id="SectionList" required name="SectionName" class="form-control">
						
						</select>
					</div>
				</div>

					<div class="row col-xs-12 lbl-margin-top lbl-margin-top">
						<div class="text-right col-xs-2">
							<label class="lbl-bold margin-top">ACADEMIC YEAR</label>
						</div>
						<div class="col-xs-3 lbl-margin-top">

							<select id="DropDownList1" name="DropDownList1" class="form-control" style="margin-top:-19px;"></select>

						</div>
						<div class="text-right col-xs-2 col-xs-offset-1">
							<label class="margin-top lbl-bold">TERM</label>
						</div>

						<div class="col-xs-3">
							<select id="TermList" required name="TermName" class="form-control">
								@if (ViewBag.termList != null)
								{
									<option value='0'>-- Select Term --</option>
									foreach (var item in ViewBag.termList)
									{
										if (item.Text != null)
										{

											<option value="@item.Value">
												@item.Text
											</option>

										}

									}
								}
							</select>
						</div>
					</div>
				<div class="row col-xs-offset-5">
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<div class="text-left col-xs-3">
						<input type="button" class="btn btn-success" id="btnGetAttendance" value="GET ATTENDANCE" />
					</div>
				</div>
			
				<div class="content" style="margin-top:100px; overflow:hidden; height:100px; width:1150px; ">
					<div id="AttendanceHandsonTable" class="col-xs-offset-0 handsontable hot"   ></div>
					<div class="row control-group"></div>
					
				</div>
				<div class="row col-xs-2 col-xs-offset-10 vert-spacer">
					<input type="button" id="btnSaveAttendance" value="SAVE ATTENDANCE" class="btn btn-success" />
				</div>

			</div>
		</div>

		</div>
</body>
