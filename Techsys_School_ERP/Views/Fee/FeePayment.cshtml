									@Html.EditorFor(model => model.Next_due_date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Collected By", @readonly = "readonly" } })
								</div>
								<div class="col-md-2 col-sm-2 col-md-offset-1 col-sm-offset-1">
									<input type="button" id="btnPayFees" class="btn btn-primary bg-green-400" value="PAY FEES" />
								</div>
								</div>
</fieldset>
					</div>

				</div>
</div>
</div>
