	<div class="page-container" style="height:100%;">
		<!-- Page content -->
		<div class="page-content">
			
			<!-- Page header -->
			<!-- /page header -->
			<!-- Content area -->
			<div class="content">
				<!-- Basic initialization -->
				

				<div class="panel panel-primary panel-bordered">
					<div class="panel-heading bg-indigo-400">
						<h6 class="panel-title ">INVENTORY ITEM LIST</h6>
						<div class="heading-elements">
							<ul class="icons-list">
								<li><a data-action="collapse"></a></li>
								<li><a data-action="reload"></a></li>
								<li><a data-action="close"></a></li>
							</ul>
						</div>
					</div>
					<div class="panel-body">

					</div>
					<div class="row col-xs-8">
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<div class="text-left col-xs-4">
							<input type="text" class="form-control col-xs-2" id="txtAddInventoryItem" />
						</div>

						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<div class="text-left col-xs-2">
							<input type="button" class="btn btn-success" id="btnAddInventoryItem" value="ADD INVENTORY ITEM" />
						</div>

					</div>

					<table class="table datatable-button-html5-basic table-striped table-bordered">
						<thead class="bg-primary-400">
							<tr>
								<th>Exam Name</th>
								<th>Academic Year</th>
								<th>Is Active</th>
								<th>Created On</th>
								<th>Created By</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Name</td>
									<td>@item.Academic_Year</td>
									<td>@item.Is_Active</td>
									@if (item.Created_On != null)
									{
										<td>@item.Created_On</td>
									}
									else
									{
										<td></td>
									}
									<td>@User.Identity.Name</td>
									<td>
										@Html.ActionLink("Delete", "Delete", new { id = item.Id })
									</td>
								</tr>

							}
						</tbody>
					</table>
				</div>




