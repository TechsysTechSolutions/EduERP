	<div class="page-container" style="height:100%;">
		<!-- Page content -->
		<div class="page-content">
			@*<div class="content-wrapper">*@
			<!-- Page header -->
			<!-- /page header -->
			<!-- Content area -->
			<div class="content">
				<!-- Basic initialization -->
				@*<div class="panel panel-tab-content">*@

				<div class="panel panel-primary panel-bordered">
					<div class="panel-heading ">
						<h6 class="panel-title ">ROLE LIST</h6>
						<div class="heading-elements">
							<ul class="icons-list">
								<li><a data-action="collapse"></a></li>
								<li><a data-action="reload"></a></li>
								<li><a data-action="close"></a></li>
							</ul>
						</div>
					</div>
					<div class="panel-body">

					</div>
					<div class="row col-xs-8">
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<div class="text-left col-xs-4">
							<input type="text" class="form-control col-xs-2" id="txtAddUser" />
						</div>

						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<div class="text-left col-xs-2">
							<input type="button" class="btn btn-success" id="btnAddUser" value="ADD USER" />
						</div>

					</div>

					<table class="table datatable-button-html5-basic table-striped table-bordered">
						<thead class="bg-primary-400">
							<tr>
								<th>Name</th>
								<th>User Id</th>
								<th>Academic Year</th>
								<th>Role Name</th>
								<th>Last Update</th>
								<th>Updated By</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Name</td>
									<td>@item.User_Id</td>
									<td>@item.Academic_Year</td>
									<td>@item.Role_Name</td>
									<td>@item.Updated_On.Value.ToShortDateString()</td>
									<td>@User.Identity.Name</td>
									<td>
										@Html.ActionLink("Edit", "Edit", new { id = item.Id }) &nbsp;|&nbsp;
										@Html.ActionLink("Delete", "Delete", new { id = item.Id })
									</td>
								</tr>

							}
						</tbody>
					</table>
				</div>




				@*</div>*@

